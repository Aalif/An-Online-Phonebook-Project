@model OnlinePhoneBook.Models.contactdetails_tb

<div class="card">
    <div class="card-header">
        Edit Contact
    </div>
    <div class="card-body">
        @using (Html.BeginForm("EditContact", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("_Partialaddedit")
            <div class="form-group">
                <div class="form-row">
                    <div class="col-md-6">
                        @Html.Label("Upload Image", htmlAttributes: new { @class = "control-label" })
                        @Html.TextBox("file", null, new { type = "file", @class = "form-control-file", accept = "image/x-png,image/jpeg" })
                        @Html.ValidationMessage("FileErrorMessage", new { @class = "text-danger" })
                    </div>
                    <div class="offset-2 col-md-4">
                        <img src="@Url.Content(Model.imagepath ?? "~/Image/no_image.png")" alt="Image" class="img-fluid img-thumbnail" style="max-height:200px;max-width:250px" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="form-row text-center">
                    <div class="col-md-12">
                        <input type="submit" value="Edit Contact" class="btn btn-primary btn-lg" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>